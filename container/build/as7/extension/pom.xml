<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.servers.jainslee.core</groupId>
		<artifactId>slee-container-build-as7</artifactId>
		<version>3.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>slee-container-build-as7-extension</artifactId>

	<properties>
		<version.jboss.as>7.2.0.Final</version.jboss.as>
		<version.junit>4.8.2</version.junit>
		<module.name>org.telestax.slee.container.extension</module.name>
		<module.path>org/telestax/slee/container/extension</module.path>		
	</properties>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.8.1</version>
				<configuration>
					<redirectTestOutputToFile>true</redirectTestOutputToFile>
					<enableAssertions>true</enableAssertions>
					<argLine>-Xmx512m</argLine>
					<systemProperties>
						<property>
							<name>jboss.home</name>
							<value>${jboss.home}</value>
						</property>
					</systemProperties>
					<includes>
						<include>**/*TestCase.java</include>
					</includes>
					<forkMode>once</forkMode>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<descriptors>
						<descriptor>
							src/main/assemble/descriptor.xml
						</descriptor>
					</descriptors>
					<appendAssemblyId>false</appendAssemblyId>
					<finalName>module</finalName>																				
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.as</groupId>
				<artifactId>jboss-as-controller</artifactId>
				<version>${version.jboss.as}</version>
			</dependency>
			<dependency>
				<groupId>org.jboss.as</groupId>
				<artifactId>jboss-as-jmx</artifactId>
				<version>${version.jboss.as}</version>
			</dependency>
			<dependency>
				<groupId>org.jboss.as</groupId>
				<artifactId>jboss-as-server</artifactId>
				<version>${version.jboss.as}</version>
			</dependency>
			<dependency>
				<groupId>org.jboss.as</groupId>
				<artifactId>jboss-as-transactions</artifactId>
				<version>${version.jboss.as}</version>
			</dependency>
			<dependency>
				<groupId>org.jboss</groupId>
				<artifactId>jboss-vfs</artifactId>
				<version>3.1.0.Final</version>
			</dependency>
			<dependency>
				<groupId>org.jboss.as</groupId>
				<artifactId>jboss-as-subsystem-test</artifactId>
				<version>${version.jboss.as}</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<scope>test</scope>
				<version>${version.junit}</version>
			</dependency>			
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>slee-container-build-as7-modules</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-controller</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-jmx</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-server</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-transactions</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-subsystem-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>deploy-module-eap61</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy todir="${jboss.home}/modules/system/layers/base/${module.path}">
											<fileset dir="${project.build.directory}/module"/>
										</copy>
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>undeploy</id>
								<phase>clean</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>									
										<delete failonerror="false" dir="${jboss.home}/modules/system/layers/base/${module.path}"/>										
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>deploy-configuration-eap61</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>										
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[</extensions>]]></replacetoken>
  											<replacevalue><![CDATA[<extension module="org.telestax.slee.container.extension"/></extensions>]]></replacevalue>
										</replace>
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[</profile>]]></replacetoken>
  											<replacevalue><![CDATA[<subsystem xmlns="urn:telestax:slee-container:3.0"/></profile>]]></replacevalue>
										</replace>
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>undeploy</id>
								<phase>clean</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>									
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[<extension module="org.telestax.slee.container.extension"/>]]></replacetoken>
  											<replacevalue><![CDATA[]]></replacevalue>
										</replace>
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[<subsystem xmlns="urn:telestax:slee-container:3.0"/>]]></replacetoken>
  											<replacevalue><![CDATA[]]></replacevalue>
										</replace>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>deploy-module-as7</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy todir="${jboss.home}/modules/${module.path}">
											<fileset dir="${project.build.directory}/module"/>
										</copy>										
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>undeploy</id>
								<phase>clean</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>									
										<delete failonerror="false" dir="${jboss.home}/modules/${module.path}"/>																				
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>deploy-configuration-as7</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>										
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[</extensions>]]></replacetoken>
  											<replacevalue><![CDATA[<extension module="org.telestax.slee.container.extension"/></extensions>]]></replacevalue>
										</replace>
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[</profile>]]></replacetoken>
  											<replacevalue><![CDATA[<subsystem xmlns="urn:telestax:slee-container:3.0"/></profile>]]></replacevalue>
										</replace>
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>undeploy</id>
								<phase>clean</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>									
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[<extension module="org.telestax.slee.container.extension"/>]]></replacetoken>
  											<replacevalue><![CDATA[]]></replacevalue>
										</replace>
										<replace file="${jboss.home}/standalone/configuration/standalone.xml">
  											<replacetoken><![CDATA[<subsystem xmlns="urn:telestax:slee-container:3.0"/>]]></replacetoken>
  											<replacevalue><![CDATA[]]></replacevalue>
										</replace>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
